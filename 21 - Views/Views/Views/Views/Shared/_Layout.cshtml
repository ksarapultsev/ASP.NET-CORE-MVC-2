<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link asp-href-include="lib/bootstrap/dist/css/*.min.css" rel="stylesheet" />
</head>
<body class="m-1 p-1">
    @RenderSection("Header")
    <div class="bg-info">
        This is part of the layout  Header
    </div>
    @RenderSection("Body")
    <div class="bg-info">
        This is part of the layout  RenderBody
    </div>
    @if (IsSectionDefined("Footer"))
    {
        @RenderSection("Footer")
    } else
    {
        <h4>This is the default footer</h4>
    }
    @RenderSection("scripts", false)
    <div class="bg-info">
        This is part of the layout  Footer
    </div>
</body>
</html>
